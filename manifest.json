{
	"name": "Chrome Settings Store",
	"description": "Stores settings for sites without authentication",
	"version": "0.1",
	"manifest_version": 2,
	"background": {
		"page": "event.html",
		"persistent": false
	},
	"sandbox": {
		"pages": ["sandbox.html"]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Save/Load Settings"
	},
	"web_accessible_resources": ["icon.png"],
	"permissions": [
		"notifications", 
		"storage",
		"tabs", "http://*/*"
	]
}
